######### MULTIMEDIA BUTTONS ##########

# Pulse Audio controls
# note: the '1' is active sink number. Use pactl list to see which works
# increase sound volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume alsa_output.pci-0000_00_09.2.analog-stereo +5%

# lower sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume alsa_output.pci-0000_00_09.2.analog-stereo -5%

# mute sound 
bindsym XF86AudioMute exec pactl set-sink-mute alsa_output.pci-0000_00_09.2.analog-stereo toggle

# MPC Audio controls for MPD
bindsym XF86AudioStop exec mpc stop
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioNext exec mpc next



